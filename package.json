{
  "name": "robsonalvesdevbr-angular",
  "version": "0.0.0",
  "engines": {
    "node": ">=22.9"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --port 4200",
    "start:prod": "ng serve --configuration production",
    "start:hmr": "ng serve --hmr",
    "start:perf": "ng serve --optimization --named-chunks",
    "dev": "ng serve --open --host 0.0.0.0",
    "build": "ng build --configuration development",
    "build:prod": "ng build --configuration production --optimization",
    "build:stats": "ng build --configuration production --stats-json",
    "build:analyze": "npm run build:stats && npx webpack-bundle-analyzer dist/robsonalves/stats.json",
    "build:ci": "ng build --configuration production --progress=false",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=true",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "test:nowatch": "ng test --watch=false --no-progress --browsers=ChromeHeadless",
    "test:coverage": "ng test --no-watch --code-coverage --browsers=ChromeHeadless",
    "test:prod": "ng test --configuration production --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:ci": "ng lint --format=json --output-file=lint-results.json || true",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "format:ci": "prettier --check \"src/**/*.{ts,html,scss,json}\" --log-level=error",
    "perf:audit": "npm run build:prod && npx lighthouse http://localhost:4200 --only-categories=performance --chrome-flags=\"--headless\" --output=json --output-path=performance-audit.json",
    "perf:bundle": "npm run build:analyze",
    "perf:monitor": "ng serve --optimization && node scripts/performance-monitor.js",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm install --legacy-peer-deps",
    "deps:audit": "npm audit --audit-level moderate",
    "deps:fix": "npm audit fix",
    "ci": "npm run deps:audit && npm run lint:ci && npm run test:ci && npm run build:ci",
    "deploy:prod": "npm run ci && npm run build:prod",
    "serve:prod": "npx http-server dist/robsonalves -p 8080 -c-1",
    "clean": "rm -rf dist node_modules/.cache .angular",
    "clean:all": "rm -rf dist node_modules package-lock.json && npm install --legacy-peer-deps"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/platform-browser-dynamic": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@popperjs/core": "2.11.8",
    "bootstrap-icons": "1.13.1",
    "ngx-google-analytics": "^14.0.1",
    "ngx-pagination": "6.0.3",
    "rxjs": "7.8.2",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.3",
    "@angular-eslint/builder": "^20.3.0",
    "@angular-eslint/eslint-plugin": "^20.3.0",
    "@angular-eslint/eslint-plugin-template": "^20.3.0",
    "@angular-eslint/template-parser": "^20.3.0",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@types/jasmine": "5.1.9",
    "bootstrap": "^5.3.8",
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "http-server": "^14.1.1",
    "jasmine-core": "^5.11.0",
    "karma": "6.4.4",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.44.1",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
