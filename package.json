{
  "name": "robsonalvesdevbr-angular",
  "version": "2.1.0",
  "engines": {
    "node": ">=22.12"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200",
    "start:prod": "ng serve --configuration production",
    "dev": "ng serve --open",
    "build": "ng build --configuration development",
    "build:prod": "ng build --configuration production --optimization",
    "build:stats": "ng build --configuration production --stats-json",
    "build:analyze": "npm run build:stats && npx webpack-bundle-analyzer dist/robsonalves/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:nowatch": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "clean": "rm -rf dist node_modules/.cache .angular",
    "analyze": "npm run build:stats && npx webpack-bundle-analyzer dist/robsonalves/stats.json --port 8888",
    "security:check": "npm audit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:report": "playwright show-report"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.8",
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/forms": "^21.0.8",
    "@angular/platform-browser": "^21.0.8",
    "@angular/platform-browser-dynamic": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@popperjs/core": "^2.11.8",
    "bootstrap-icons": "^1.13.1",
    "ngx-google-analytics": "^14.0.1",
    "ngx-pagination": "6.0.3",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.5",
    "@angular-eslint/builder": "^21.0.0",
    "@angular-eslint/eslint-plugin": "^21.0.0",
    "@angular-eslint/eslint-plugin-template": "^21.0.0",
    "@angular-eslint/template-parser": "^21.0.0",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "@playwright/test": "^1.57.0",
    "@standard-schema/spec": "^1.0.0",
    "@types/jasmine": "^5.1.14",
    "@vitest/browser": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "bootstrap": "^5.3.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "http-server": "^14.1.1",
    "jsdom": "^27.4.0",
    "prettier": "3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "webpack-bundle-analyzer": "^5.1.1",
    "zone.js": "^0.16.0"
  }
}
